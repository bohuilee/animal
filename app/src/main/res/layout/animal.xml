<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="0dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <ImageView
            android:id="@+id/AnimalAlbumFileImgView"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="false"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/AnimalAreaNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/AnimalAlbumFileImgView"
            android:background="@color/color80AlphaWhite"
            android:textColor="#000011"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/AnimalSexNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/AnimalAreaNameTextView"
            android:background="@color/color80AlphaWhite"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/AnimalShareButton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignBottom="@+id/AnimalSexNameTextView"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="48dp"
            android:background="@null"
            android:padding="3dp"/>

        <ImageButton
            android:id="@+id/AnimalFavoriteButton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignBottom="@+id/AnimalSexNameTextView"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:background="@null"
            android:padding="3dp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>